<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <Button
    android:id="@+id/btn_baidu_news"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginRight="16dp"
    android:onClick="requestArticleList"
    android:text="article list"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <Button
    android:id="@+id/btn_gank"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:onClick="requestGankTodayList"
    android:text="gank today list"
    app:layout_constraintEnd_toEndOf="@+id/btn_baidu_news"
    app:layout_constraintStart_toStartOf="@+id/btn_baidu_news"
    app:layout_constraintTop_toBottomOf="@+id/btn_baidu_news" />

  <Button
    android:id="@+id/btn_login"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:onClick="requestLogin"
    android:text="login"
    app:layout_constraintEnd_toEndOf="@+id/btn_gank"
    app:layout_constraintStart_toStartOf="@+id/btn_gank"
    app:layout_constraintTop_toBottomOf="@+id/btn_gank" />

  <Button
    android:id="@+id/btn_download"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:onClick="download"
    android:text="Download"
    app:layout_constraintEnd_toEndOf="@+id/btn_login"
    app:layout_constraintStart_toStartOf="@+id/btn_login"
    app:layout_constraintTop_toBottomOf="@+id/btn_login" />

</androidx.constraintlayout.widget.ConstraintLayout>